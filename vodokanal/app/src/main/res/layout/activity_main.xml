<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/showLastMessageTopic1TV"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="40dp"
        android:text="Сообщения из топика 1" />

    <EditText
        android:id="@+id/Topic1EdT"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="30dp"
        android:ems="10"
        android:hint="Topic 1"
        android:inputType="text" />

    <Button
        android:id="@+id/BConnectToTopic1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Подключиться к топику 1" />

    <TextView
        android:id="@+id/showLastMessageTopic2TV"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="40dp"
        android:text="Сообщения из топика 2" />

    <EditText
        android:id="@+id/Topic2EdT"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="30dp"
        android:ems="10"
        android:hint="Topic 2"
        android:inputType="text" />

    <Button
        android:id="@+id/BConnectToTopic2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:text="Подключиться к топику 2" />
</LinearLayout>